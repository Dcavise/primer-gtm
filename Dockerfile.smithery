FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy server files
COPY server.js ./

# Make server.js executable
RUN chmod +x server.js

# Set environment variables with defaults
ENV LOG_LEVEL=info
ENV REQUEST_TIMEOUT=30000

# The server will run on STDIO, no need to expose ports
# EXPOSE 3000

# Start the MCP server
CMD ["node", "server.js"] 